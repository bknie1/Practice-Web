<% include partials/header %>

<div class="container">
  <% include partials/navbar %>

  <div class="add-form">
    <h3>Add Campground</h3>
    <form action="/campgrounds" method="post">
      <div class="form-group">
        <label for="name-input">Name</label>
        <input class="form-control" id="name-input" type="text" name="name" placeholder="Enter Name">
      </div>
      <div class="form-group">
        <label for="img-input">Image</label>
        <input class="form-control id="img-input" type="text" name="image" placeholder="Enter URL">
      </div>
      <button class="btn btn-lg btn-block" type="submit" name="button">Submit</button>
    </form>
  </div>

<% include partials/footer %>
</div>
